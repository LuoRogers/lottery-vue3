{
  "name": "lottery-vue3",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "electron/dist/main.js",
  "scripts": {
    "dev": "vite",
    "electron:dev": "vite dev --host --port 5180 && electron .",
    "build": "vite build",
    "deploy": "vite build --base=/lottery-vue3/ && gh-pages -d dist",
    "predeploy": "pnpm run build",
    "preview": "vite preview",
    "serve": "vite preview",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@iconify-icons/mdi": "^1.2.48",
    "@iconify/vue": "^5.0.0",
    "pinia": "^3.0.2",
    "pinia-plugin-persistedstate": "^4.2.0",
    "vue": "^3.5.13",
    "vue-router": "^4.4.3",
    "vue-sonner": "^1.3.2"
  },
  "devDependencies": {
    "@pinia-plugin-persistedstate/nuxt": "^1.2.1",
    "@pinia/nuxt": "^0.11.0",
    "@types/node": "^22.14.1",
    "@types/xlsx": "^0.0.36",
    "@vitejs/plugin-vue": "^5.2.2",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.0.22",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.3",
    "tailwindcss": "3.4.1",
    "terser": "^5.39.0",
    "typescript": "~5.7.3",
    "unplugin-auto-import": "^20.2.0",
    "vite": "^6.3.0",
    "vite-plugin-electron": "^0.29.0",
    "vue-tsc": "^2.2.8",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.example.lottery",
    "productName": "Lottery App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron/dist/**/*"
    ],
    "win": {
      "target": "portable",
      "asar": false,
      "artifactName": "${productName}-${version}.${ext}",
      "forceCodeSigning": false
    }
  }
}
